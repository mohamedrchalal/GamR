<!-- shows current selected game  -->
<div class="show_page">
  <h1> <%= @game.name %> </h1>
  <img src="<%=@game.photo_url%>" alt="<%=@game.name%>"/>
</div>
<!-- makes a nav wth nav-pills bootstrap styling  -->
<ul class="nav nav-pills">
  <li>  <%= link_to 'Edit', edit_game_path(@game)%></li>
  <li>  <%= link_to 'Back', games_path %></li>
  <li>  <%= link_to 'Delete', game_path(@game), method: :delete %></li>
</ul>
