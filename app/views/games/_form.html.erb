<!-- adds forms for each attr  -->
<%= form_for(@game) do |f| %>

    <%= f.label :name %>
    <%= f.text_field :name %>
    <br>
    <%= f.label :price %>
    <!-- makes sure that decimals are accepted in number field -->
    <%= f.number_field :price, :step => 'any' %>
    <br>
    <%= f.label :release_date %>
    <%= f.date_field :release_date  %>
    <br>
    <%= f.label :featured %>
    <%= f.check_box  :featured,     default: false %>
    <br>
    <%= f.label :photo_url %>
    <%= f.url_field   :photo_url %>
    <br>
    <%= f.submit %>

<% end %>
